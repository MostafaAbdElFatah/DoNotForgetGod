<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg6"
    tools:context="com.example.user.donotforgetgod.Activities.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Switch
                android:id="@+id/switchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:checked="false"
                android:textColor="#000"
                android:text="@string/turn_off"
                android:textSize="20sp"/>


            <Spinner
                android:id="@+id/timesDuration"
                android:layout_margin="20dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

           <TextView
               android:id="@+id/zaherPicker"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:textSize="32sp"
               android:textColor="#000"
               android:text="الحمد الله"
               android:layout_margin="20dp"
               android:background="@drawable/text_view_bg"
               android:drawableLeft="@drawable/ic_action_down_dark"
               android:onClick="changeZakerText"/>

        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>
